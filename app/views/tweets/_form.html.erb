<%= form_for @tweet, :html => { :class => "form-horizontal tweet" } do |f| %>

  <% if @tweet.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tweet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.hidden_field :user_id, :class => 'form-control', value: current_user.id %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :tweet, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tweet, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tweet) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tweets_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
